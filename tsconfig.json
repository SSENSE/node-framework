{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./js/",
    "sourceMap": true,
    "declaration": true,
    "removeComments": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "alwaysStrict": true
  },
  "exclude": [
    "node_modules",
    "tests",
    "typings.d.ts"
  ]
}
